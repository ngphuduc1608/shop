@model proj_tt.Web.Models.Products.IndexViewModel
@{
    ViewBag.Title = "Products";
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Products/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Products/Index.min.js" asp-append-version="true"></script>
    </environment>

}

<div class="container py-4">
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-lg-3">
            <div class="filter-sidebar">
                <div class="filter-header">
                    <h5>Filters</h5>
                </div>

                <!-- Categories -->
                <div class="filter-group">
                    <div class="filter-title" data-bs-toggle="collapse" href="#categoryFilter" role="button" aria-expanded="true">
                        Categories
                    </div>
                    <div class="filter-options collapse show" id="categoryFilter">
                        @foreach (var category in Model.Categories)
                        {
                            <div class="filter-option">
                                <input type="checkbox" id="category_@category.Value" class="form-check-input category-checkbox" 
                                       value="@category.Value"
                                @(Model.SelectedCategoryIds != null && int.TryParse(category.Value, out int categoryId) && Model.SelectedCategoryIds.Contains(categoryId) ? "checked" : "") />
                                <label for="category_@category.Value" class="form-check-label">@category.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <!-- Price Range -->
                <div class="filter-group">
                    <div class="filter-title" data-bs-toggle="collapse" href="#priceFilter" role="button" aria-expanded="true">
                        Price Range
                    </div>
                    <div class="filter-options collapse show" id="priceFilter">
                        <div class="price-inputs mb-2">
                            <div class="row">
                                <div class="col-6">
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="MinPriceInput" placeholder="Min" value="@Model.CurrentMinPrice">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="MaxPriceInput" placeholder="Max" value="@Model.CurrentMaxPrice">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="price-range">
                            <input type="text" class="js-range-slider" id="priceRange" name="priceRange" value="" />
                            <input type="hidden" id="MinPrice" name="MinPrice" value="@Model.CurrentMinPrice" />
                            <input type="hidden" id="MaxPrice" name="MaxPrice" value="@Model.CurrentMaxPrice" />
                        </div>
                    </div>
                </div>

                <form id="filterForm" method="get" action="@Url.Action("Index")">
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="sort" value="@Model.CurrentSort" />
                    <input type="hidden" name="minPrice" id="filterMinPrice" value="@Model.CurrentMinPrice" />
                    <input type="hidden" name="maxPrice" id="filterMaxPrice" value="@Model.CurrentMaxPrice" />
                    <input type="hidden" name="keyword" value="@Model.Keyword" />
                    <button type="submit" class="btn btn-primary w-100 mt-3">Apply Filters</button>
                </form>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100 mt-2">Reset All</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Sort and Results Count -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="results-count">
                    Showing <strong>@(((Model.CurrentPage - 1) * Model.PageSize) + 1)-@(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems))</strong> of <strong>@Model.TotalItems</strong> products
                </div>
                <div class="sort-dropdown">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Sort by: @(Model.CurrentSort == "CreationTime desc" ? "Featured" : 
                                     Model.CurrentSort == "Price asc" ? "Price: Low to High" : 
                                     "Price: High to Low")
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { sort = "CreationTime desc", page = Model.CurrentPage, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })">Featured</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { sort = "Price asc", page = Model.CurrentPage, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })">Price: Low to High</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { sort = "Price desc", page = Model.CurrentPage, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })">Price: High to Low</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="tab-contents" style="width:100%">
                <div class="element-product">
                    <div class="products">
                        <div class="product-list row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-4">
                            @if (Model.Products.Any())
                            {
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col">
                                        <a href="/Product/Details?productId=@product.Id" class="product-item text-decoration-none @(product.Stock == 0 ? "disabled-link" : "")">
                                            <div class="box position-relative">
                                                <div class="a-img position-relative">
                                                    <img class="thumb w-100" src="@product.ImageUrl" alt="@product.Name">

                                                    @if (product.Stock == 0)
                                                    {
                                                        <div class="out-of-stock-overlay d-flex justify-content-center align-items-center">
                                                            <span class="text-white fw-bold fs-5">HẾT HÀNG</span>
                                                        </div>
                                                    }
                                                </div>

                                                <div class="status">
                                                    <img style="width: 80%;" src="https://en.chuu.co.kr/web/upload/custom_153.gif" alt="">
                                                </div>

                                                <div class="discount-badge">
                                                    <span>@product.Discount%</span>
                                                </div>

                                                <div class="product-description ">
                                                    <p class="name">
                                                        <span>@product.Name</span>
                                                    </p>
                                                    <div class="price-info">
                                                        <span class="current-price text-primary fw-semibold">
                                                            $@((product.Price * (1 - (decimal)product.Discount / 100)).ToString("0.00"))
                                                        </span>
                                                        <span class="original-price text-muted text-decoration-line-through">
                                                            $@product.Price.ToString("0.00")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>

                                }
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center" style="min-height: 60vh;">
                                    <div class="text-center px-4">
                                        <img src="https://deo.shopeemobile.com/shopee/shopee-pcmall-live-sg/search/6724b074573bd78dea13.png"
                                             alt="No products" 
                                             style="width: 128px; height: 128px; margin-bottom: 24px;">
                                        <h5 class="mb-3">Hix. Không có sản phẩm nào. Bạn thử tắt điều kiện lọc và tìm lại nhé?</h5>
                                        <div class="my-3">
                                            <span class="text-muted">or</span>
                                        </div>
                                        <a href="@Url.Action("Index")" class="btn btn-danger">Xóa bộ lọc</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, sort = Model.CurrentSort, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, sort = Model.CurrentSort, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, sort = Model.CurrentSort, minPrice = Model.CurrentMinPrice, maxPrice = Model.CurrentMaxPrice, categoryIds = Model.SelectedCategoryIds, keyword = Model.Keyword })" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
