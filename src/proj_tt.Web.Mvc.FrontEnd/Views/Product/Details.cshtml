@using proj_tt.Web.Models.Products
@model IndexViewModel



<style>

    .product-gallery-thumbnail {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .product-gallery-thumbnail:hover, .product-gallery-thumbnail.active {
            border-color: #0d6efd !important;
        }

    .star-rating input {
        display: none;
    }

    .star-rating label {
        color: #d1d5db;
        font-size: 1.5rem;
        cursor: pointer;
    }

    .star-rating input:checked ~ label {
        color: #d1d5db;
    }

    .star-rating label:hover,
    .star-rating label:hover ~ label,
    .star-rating input:checked ~ label {
        color: #ffc107;
    }

    .main-image-container {
        height: 400px;
        overflow: hidden;
    }

    .main-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<script>
    // Quantity increment/decrement
    function incrementQuantity() {
        const quantityInput = document.getElementById('quantity');
        let quantity = parseInt(quantityInput.value);
        if (quantity < 10) {
            quantityInput.value = quantity + 1;
        }
    }

    function decrementQuantity() {
        const quantityInput = document.getElementById('quantity');
        let quantity = parseInt(quantityInput.value);
        if (quantity > 1) {
            quantityInput.value = quantity - 1;
        }
    }

    function addToCart() {
        const quantity = parseInt(document.getElementById('quantity').value);
        const productId = @Model.Product.Id;

        $.ajax({
            url: '/Cart/AddToCart',
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function(response) {
                if (response.success) {
                    abp.notify.success('SavedSuccessfully');
                }
            },
            error: function() {
                abp.notify.error(('FailedToSave'));
            }
        });
    }

    function buyNow() {
        const quantity = parseInt(document.getElementById('quantity').value);
        const productId = @Model.Product.Id;

        $.ajax({
            url: '/Cart/AddToCart',
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function(response) {
                if (response.success) {
                    window.location.href = '/Order/Checkout?productId=' + productId;
                } else {
                    abp.notify.error(('FailedToSave'));
                }
            },
            error: function() {
                abp.notify.error(('FailedToSave'));
            }
        });
    }

</script>


<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Product">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Product.Name</li>
        </ol>
    </nav>

    <!-- Product Detail -->
    <div class="row g-4">
        <!-- Product Gallery - Left Column -->
        <div class="col-lg-6">
            <div class="card mb-3">
                <div class="main-image-container position-relative">
                    <img id="mainImage" src="@Model.Product.ImageUrl"
                         class="main-image" alt="ImageUrl">
                </div>
            </div>

        </div>

        <!-- Product Info - Right Column -->
        <div class="col-lg-6">
            <div class="card p-4">
                <h1 class="h2 fw-bold mb-3">@Model.Product.Name</h1>

                <div class="d-flex align-items-center mb-3">
                    <div class="me-4">
                        <div class="text-warning">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <small class="text-muted">(24 reviews)</small>
                    </div>
                </div>

                <div class="mb-4">
                    <span class="h3 text-success fw-bold">$@((Model.Product.Price * (1 - (Model.Product.Discount / 100m))).ToString("0.00"))</span>
                    <span class="text-decoration-line-through text-muted ms-2">$@Model.Product.Price.ToString("0.00")</span>
                    <span class="badge bg-danger ms-2">@Model.Product.Discount% OFF</span>
                </div>

                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <span class="me-3">Quantity:</span>
                        <div class="input-group" style="width: 120px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity()">-</button>
                            <input type="number" id="quantity" class="form-control text-center" value="1" min="1" max="10">
                            <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity()">+</button>
                        </div>
                        <small class="text-muted ms-2">(Available: 50)</small>
                    </div>

                    <div class="d-flex gap-2 mb-3">
                        <button class="btn btn-success flex-grow-1" onclick="addToCart()">
                            <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                        </button>
                        <button class="btn btn-primary flex-grow-1" onclick="buyNow()">
                            <i class="fas fa-bolt me-2"></i> Buy Now
                        </button>
                    </div>

                </div>

                <div class="border-top border-bottom py-3 mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-truck text-muted me-2"></i>
                        <span>Free shipping on orders over $50</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-undo text-muted me-2"></i>
                        <span>30-day return policy</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-shield-alt text-muted me-2"></i>
                        <span>100% organic certified</span>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="far fa-heart me-1"></i> Wishlist
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-share-alt me-1"></i> Share
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-exchange-alt me-1"></i> Compare
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Description and Review Tabs -->
    <div class="mt-5">
        <ul class="nav nav-tabs" id="productTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
            </li>
        </ul>
        <div class="tab-content p-4 bg-white border border-top-0 rounded-bottom" id="productTabContent">
            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                <h3 class="h4 mb-3">Product Description</h3>
                <p class="text-muted mb-4">Our Premium Organic Avocados are sourced from sustainable farms that prioritize environmental responsibility and ethical farming practices. Each avocado is hand-picked at peak ripeness to ensure optimal flavor and texture.</p>

                <h4 class="h5 mb-2">Features & Benefits:</h4>
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Certified organic and non-GMO</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Rich in healthy monounsaturated fats</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Excellent source of fiber, vitamins C, E, K, and B-6</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> No artificial preservatives or additives</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Perfect for guacamole, salads, sandwiches, or smoothies</li>
                </ul>

                <h4 class="h5 mb-2">Storage Instructions:</h4>
                <p class="text-muted">Store unripe avocados at room temperature. Once ripe, they can be refrigerated to slow further ripening. To speed up ripening, place in a paper bag with a banana or apple.</p>
            </div>

        </div>
    </div>

</div>