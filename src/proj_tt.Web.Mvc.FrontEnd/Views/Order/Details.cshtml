@using System.Globalization
@using proj_tt.Orders
@model proj_tt.Web.Models.Orders.OrderDetailsViewModel

@section styles {
    <link href="~/css/order-details.css" rel="stylesheet" />
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Order/MyOrders">My Orders</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Order #@Model.Order.Id</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">Order #@Model.Order.Id</h1>
                        <span class="badge bg-@(Model.Order.Status == OrderStatus.Delivered ? "success" : 
                                            Model.Order.Status == OrderStatus.Cancelled ? "danger" : 
                                            Model.Order.Status == OrderStatus.Processing ? "primary" : 
                                            Model.Order.Status == OrderStatus.Shipped ? "info" : "warning")">
                            @Model.Order.Status
                        </span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">Shipping Information</h5>
                            <p>
                                <strong>Name:</strong> @Model.Order.Name<br>
                                <strong>Address:</strong> @Model.Order.Address<br>
                                <strong>Phone:</strong> @Model.Order.Phone
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Order Information</h5>
                            <p>
                                <strong>Order Date:</strong> @Model.Order.CreationTime.ToString("f")<br>
                                <strong>Order Status:</strong> @Model.Order.Status<br>
                                <strong>Total Amount:</strong> $@Model.Order.TotalAmount
                            </p>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                                <div class="ms-3">
                                                    <h6 class="mb-0">@item.Product.Name</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$@item.UnitPrice</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>$@Model.Order.TotalAmount</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 