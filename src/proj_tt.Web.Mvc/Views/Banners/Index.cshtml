@using proj_tt.Banners.Dto
@model List<BannerDto>


<h2>Danh sách Banner</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Ảnh</th>
            <th>Liên kết</th>
            <th>Hiển thị</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var banner in Model)
        {
            <tr>
                <td>@banner.Title</td>
                <td>
                    <img src="@banner.ImageUrl" alt="@banner.Title" style="height: 60px;" />
                </td>
                <td>
                    <a href="@banner.Link" target="_blank">@banner.Link</a>
                </td>
                <td>
                    @(banner.IsActive ? "✔" : "✖")
                </td>
            </tr>
        }
    </tbody>
</table>