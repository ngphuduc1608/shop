@using proj_tt.Web.Models.Common.Modals

@{
    Layout = null;
}

<div id="createModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateCart")))
            <form name="cartCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label for="UserId" class="col-md-3 col-form-label">@L("UserId")</label>
                        <input type="text" class="form-control" name="UserId" required>
                    </div>
                    <div class="form-group row required">
                        <label for="ProductId" class="col-md-3 col-form-label">@L("ProductId")</label>
                        <input type="text" class="form-control" name="ProductId" required>
                    </div>
                    <div class="form-group row required">
                        <label for="Quantity" class="col-md-3 col-form-label">@L("Quantity")</label>
                        <input type="number" class="form-control" name="Quantity" required>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div> 