@using proj_tt.Web.Startup
@model proj_tt.Web.Models.Carts.IndexViewModel
@{
    ViewBag.CurrentPageName = PageNames.Carts;
    ViewBag.Title = L("Cart");
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Carts/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Carts/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Cart")</h1>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="CartItemsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("ProductName")</th>
                                        <th>@L("Price")</th>
                                        <th>@L("Quantity")</th>
                                        <th>@L("Total")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>@item.Product.Price</td>
                                            <td>
                                                <input type="number" class="form-control quantity-input" 
                                                       value="@item.Quantity" 
                                                       data-cart-item-id="@item.Id"
                                                       min="1" />
                                            </td>
                                            <td>@(item.Product.Price * item.Quantity)</td>
                                            <td>
                                                <button class="btn btn-danger btn-sm remove-item" 
                                                        data-cart-item-id="@item.Id">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-right"><strong>@L("TotalAmount")</strong></td>
                                        @* <td colspan="2"><strong>@Model.Cart.TotalAmount</strong></td> *@
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="text-right mt-3">
                            <button class="btn btn-danger" id="clearCart">
                                <i class="fa fa-trash"></i> @L("ClearCart")
                            </button>
                            <button class="btn btn-primary" id="checkout">
                                <i class="fa fa-shopping-cart"></i> @L("Checkout")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Orders/_CreateModal.cshtml", new proj_tt.Web.Models.Orders.IndexViewModel()) 