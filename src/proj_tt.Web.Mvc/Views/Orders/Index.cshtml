@using proj_tt.Orders
@using proj_tt.Web.Startup
@model proj_tt.Web.Models.Orders.IndexViewModel
@{
    ViewBag.CurrentPageName = PageNames.Orders;
    ViewBag.Title = L("Orders");
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Orders/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Orders/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("Orders")</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->

                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Orders/Index.AdvancedSearch.cshtml")
                                @* <input type="text" class="form-control" id="ProductionDateRange" name="ProductionDateRange" /> *@

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="OrdersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("Username")</th>
                                        <th>@L("CustomerName")</th>
                                        <th>@L("Phone")</th>
                                        <th>@L("Address")</th>
                                        <th>@L("TotalAmount")</th>
                                        <th>@L("Status")</th>
                                        <th>@L("CreationTime")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>@order.Username</td>
                                            <td>@order.Name</td>
                                            <td>@order.Phone</td>
                                            <td>@order.Address</td>
                                            <td>@order.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge bg-@(order.Status == OrderStatus.Delivered ? "success" : 
                                                                order.Status == OrderStatus.Cancelled ? "danger" : 
                                                                order.Status == OrderStatus.Processing ? "primary" : 
                                                                order.Status == OrderStatus.Shipped ? "info" : "warning")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>@order.CreationTime.ToString("f")</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> @L("ViewDetails")
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger delete-order" data-id="@order.Id">
                                                    <i class="fas fa-trash"></i> @L("Delete")
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

